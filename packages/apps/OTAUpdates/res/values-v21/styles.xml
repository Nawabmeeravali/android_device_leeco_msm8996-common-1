        <item name="android:colorPrimary">@color/material_primary</item>
        <item name="android:colorPrimaryDark">@color/material_primary_dark</item>
        <item name="android:colorAccent">@color/accent_material_dark</item>
        <item name="helpIcon">@drawable/ic_about_dark</item>
        <item name="settingsIcon">@drawable/ic_settings_dark</item>
        <item name="changelogIcon">@drawable/ic_changelog</item>
        <item name="downloadIcon">@drawable/drawable_download</item>
        <item name="addonsIcon">@drawable/drawable_addon</item>
        <item name="separator">@color/separator_dark</item>
        <item name="browserIcon">@drawable/drawable_website</item>
        <item name="donateIcon">@drawable/drawable_donate</item>
        <item name="checkIcon">@drawable/drawable_check</item>
        <item name="noUpdateAvailable">@color/material_red_500</item>
        <item name="updateAvailable">@color/material_light_green_500</item>
        <item name="cardStyle">@style/CardStyle.Dark</item>
        <item name="cardBackground">@color/card_background_material_dark</item>
        <item name="textColorPrimary">@color/primary_text_material_dark</item>
        <item name="textColorSecondary">@color/secondary_text_material_dark</item>
        <item name="proRibbon">@drawable/pro_ribbon_dark</item>
